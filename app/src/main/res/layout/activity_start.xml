<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#88F1C0" android:id="@+id/bg_start">
    <com.google.android.gms.ads.AdView

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-5597448794343853/4624717316"/>
    <TextView
            android:text="참가 인원"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_people"
            android:textSize="60sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.222"
            app:layout_constraintHorizontal_bias="0.497"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_minus"
            android:textSize="60sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.41" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="60dp" android:backgroundTint="#11DA09" style="@style/customButtonFontStyle"/>
    <TextView
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_pnum"
            android:textSize="60sp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintVertical_bias="0.414"/>
    <Button
            android:text="BLIND MODE OFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_blind"
            android:textSize="34sp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.164" app:layout_constraintTop_toBottomOf="@+id/tv_pnum"
            android:backgroundTint="#216503" style="@style/customButtonFontStyle"/>
    <Button
            android:text="시작"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_start"
            android:textSize="60sp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.565" app:layout_constraintTop_toBottomOf="@+id/tv_pnum"
            app:layout_constraintHorizontal_bias="0.501" android:backgroundTint="#11DA09"
            style="@style/customButtonFontStyle"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_plus"
            android:textSize="60sp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.41"
            android:layout_marginEnd="60dp" android:backgroundTint="#11DA09" style="@style/customButtonFontStyle"/>

</androidx.constraintlayout.widget.ConstraintLayout>