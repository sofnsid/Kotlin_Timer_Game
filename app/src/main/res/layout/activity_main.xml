<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#88F1C0" android:id="@+id/bg_main">
    <com.google.android.gms.ads.AdView

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-5597448794343853/4624717316"/>
    <TextView
            android:text="0.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_pnum"
            android:textSize="60sp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.457"
            app:layout_constraintHorizontal_bias="0.805" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="0.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_timer"
            android:textSize="60sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.457"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="56dp"/>
    <TextView
            android:text="참가자 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_people"
            android:textSize="60sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.139"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_point"
            android:textSize="48sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn_start" app:layout_constraintTop_toBottomOf="@+id/tv_timer"/>
    <TextView
            android:text="현재"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_현재text"
            android:textSize="48sp"
            app:layout_constraintStart_toStartOf="@+id/tv_timer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_timer"
            app:layout_constraintVertical_bias="0.785" android:layout_marginStart="16dp"/>
    <TextView
            android:text="목표"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_목표text"
            android:textSize="48sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_pnum" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.789"
            app:layout_constraintHorizontal_bias="0.533" app:layout_constraintStart_toStartOf="@+id/tv_pnum"
            app:layout_constraintBottom_toTopOf="@+id/tv_pnum"/>
    <Button
            android:text="시작/정지"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_start"
            android:textSize="60sp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.75" app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="#11DA09" style="@style/customButtonFontStyle"/>
    <Button
            android:text="처음으로"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_i"
            android:textSize="34sp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_start" android:backgroundTint="#216503"
            style="@style/customButtonFontStyle"/>

</androidx.constraintlayout.widget.ConstraintLayout>